# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# LLM & Embeddings (Required)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514
VOYAGE_API_KEY=your-voyage-api-key
VOYAGE_MODEL=voyage-3

# Google Ads API (Optional - use mock data if not set)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# Meta Marketing API (Optional - use mock data if not set)
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=

# Notifications (Optional)
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Settings
APP_NAME=Marketing GraphRAG
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Query Settings
CONFIDENCE_THRESHOLD=0.7
MAX_QUERY_RESULTS=100
QUERY_TIMEOUT_SECONDS=30

# Data Sync Settings
SYNC_SCHEDULE_HOUR=2
DEFAULT_DATA_RETENTION_DAYS=365

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_SECONDS=1.0

# Azure Monitor (Optional)
AZURE_MONITOR_CONNECTION_STRING=
